<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue4in1"
    tools:context=".AddChildActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/add_child" />

    <TextView
        android:id="@+id/title_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="170dp"
        android:text="@string/title_add_child"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />



    <EditText
        android:id="@+id/edit_add_1"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/round2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:hint="First name"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/edit_add_2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/round2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="360dp"
        android:hint="Last name"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/edit_add_3"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/round2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp"
        android:hint="Gender"
        android:padding="10dp"
        />
    <EditText
    android:id="@+id/edit_add_4"
    android:layout_width="320dp"
    android:layout_height="50dp"
    android:background="@drawable/round2"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="520dp"
    android:hint="Gender"
    android:padding="10dp"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="590dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round2"
        android:drawableRight="@drawable/next"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerCrop"
        android:text="Next"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Blue4in1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_skip"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/round2"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:scaleType="centerCrop"
        android:text="Skip"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Blue4in1" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>